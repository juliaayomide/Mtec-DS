package revisao_ds;
import java.util.Scanner;
public class ex_vetor {
	public static void main(String args[]) {
		Scanner in = new Scanner(System.in);
		final int TAM=6;
		int valor[], i=0;
		valor = new int[TAM];
		
		for(i=0; i<TAM; i++){
			System.out.println("Digite o "+ (i+1) +"º valor inteiro");
			valor[i]=in.nextInt();
	
			
		}
		
		for(i=0; i<TAM; i++){
			System.out.println("Na posição "+i+" teremos o valor "+ valor [i]+"");

	
			
		}
		

	}

}

